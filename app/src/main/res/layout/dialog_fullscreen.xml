<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="@dimen/fullscreen_dialog_app_bar_padding_left"
        android:paddingEnd="@dimen/fullscreen_dialog_app_bar_padding_right"
        app:contentInsetStartWithNavigation="0dp" />

    <io.chord.ui.components.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/backgroundSecondary"
        app:cio_bn_color="@color/errorColor"
        app:cio_bn_icon="faw_exclamation_circle" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/fullscreen_dialog_padding_left"
        android:paddingTop="@dimen/fullscreen_dialog_padding_top"
        android:paddingEnd="@dimen/fullscreen_dialog_padding_right"
        android:paddingBottom="@dimen/fullscreen_dialog_padding_bottom"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</LinearLayout>