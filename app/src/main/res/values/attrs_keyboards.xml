<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Keyboard">
        <attr name="cio_kb_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="cio_kb_zoomDuration" format="integer"/>
        <attr name="cio_kb_maskColor" format="color"/>
        <attr name="cio_kb_whiteKeyColor" format="color"/>
        <attr name="cio_kb_blackKeyColor" format="color"/>
        <attr name="cio_kb_strokeColor" format="color"/>
        <attr name="cio_kb_touchColor" format="color"/>
        <attr name="cio_kb_textColor" format="color"/>
        <attr name="cio_kb_strokeThickness" format="dimension"/>
        <attr name="cio_kb_textWeight" format="float"/>
        <attr name="cio_kb_keyWeight" format="float"/>
        <attr name="cio_kb_textMargin" format="dimension"/>
        <attr name="cio_kb_octave" format="integer"/>
        <attr name="cio_kb_showOctave" format="boolean"/>
        <attr name="cio_kb_disableTouchEvent" format="boolean"/>
        <attr name="cio_kb_clampOutsideStroke" format="boolean"/>
    </declare-styleable>

    <!-- TODO set zoom duraction default value at a global place-->
    <integer name="keyboard_zoom_duration">500</integer>
    <dimen name="keyboard_stroke_thickness">2dp</dimen>
    <integer name="keyboard_text_weight">37</integer>
    <integer name="keyboard_key_weight">60</integer>
    <dimen name="keyboard_text_margin">5dp</dimen>
    <integer name="keyboard_octave">0</integer>
    <bool name="keyboard_show_octave">false</bool>
    <bool name="keyboard_disable_touch_event">false</bool>
    <bool name="keyboard_clamp_outside_stroke">false</bool>
</resources>