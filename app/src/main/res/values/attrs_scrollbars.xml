<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollBar">
        <attr name="cio_sb_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="cio_sb_moveDuration" format="integer"/>
        <attr name="cio_sb_trackColor" format="color"/>
        <attr name="cio_sb_thumbColor" format="color"/>
        <attr name="cio_sb_trackThickness" format="dimension"/>
        <attr name="cio_sb_thumbThickness" format="dimension"/>
        <attr name="cio_sb_thumbRoundness" format="dimension"/>
    </declare-styleable>

    <dimen name="scrollbar_default_thickness">32dp</dimen>
    <dimen name="scrollbar_track_thickness">4dp</dimen>
    <dimen name="scrollbar_thumb_thickness">12dp</dimen>
    <dimen name="scrollbar_thumb_roundness">999dp</dimen>

    <integer name="scrollbar_move_duration">500</integer>
</resources>